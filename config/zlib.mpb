// -*- MPC -*-
feature(zlib) {
  expand(ZLIB_INCDIR) {
    ZLIB_INCDIR
    $(ZLIB_ROOT)/include
  }
  expand(ZLIB_LIBDIR) {
    ZLIB_LIBDIR
    $(ZLIB_ROOT)/lib
  }

  includes += "$(ZLIB_INCDIR)"
  libpaths += "$(ZLIB_LIBDIR)"
  macros   += ZLIB

  specific(prop:windows) {
    zlibname = zlib
    Debug::zlibname = zlibd

  } else {
    zlibname = z
  }
  lit_libs += $(ZLIBNAME)
}
