project : glib {
  requires      += wireshark

  // Unfortunately Wireshark does not install headers for plugin
  // development; instead we rely on the source distribution:
  includes      += $(WIRESHARK_SRCDIR)
  
  // Library paths vary across platforms as well; Windows hosts
  // should use installation directory: 
  libpaths      += $(WIRESHARK_LIBDIR)

  lit_libs      += wireshark wiretap
}
