feature(bzip2) {
  includes += $(BZIP2_ROOT)/include
  libpaths += $(BZIP2_ROOT)/lib
  macros   += USE_BZIP2
  specific (em3, vc6, vc7, vc71, vc8, vc9, vc10, nmake) {
    bzip2lib = bzip2
  }
  specific(bmake, bds4) {
    bzip2lib = bzip2
  }
  specific (gnuace, make, sle, automake, ghs) {
    bzip2lib = bz2
  }
  lit_libs += $(bzip2lib)
}
