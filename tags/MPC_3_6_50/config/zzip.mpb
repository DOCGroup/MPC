feature(zzip): zlib {
  requires += zlib
  includes += $(ZZIP_ROOT)/include
  macros   += USE_ZZIP
  libpaths += $(ZZIP_ROOT)/lib

  // @@ Notice: If you are building with Cygwin, you may need to manually
  //            change the following library to zziplib.
  specific(gnuace, make, sle, automake, ghs) {
    lit_libs += zzip
  } else {
    libs += zziplib
  }
}
