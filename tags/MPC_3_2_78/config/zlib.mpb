feature(zlib) {
  includes += $(ZLIB_ROOT)/include
  libpaths += $(ZLIB_ROOT)/lib
  macros   += ZLIB

  // @@ Notice: If you are building with Cygwin, you may need to manually
  //            change the following library to zlib.
  specific(gnuace, make, sle, automake, ghs) {
    lit_libs += z
  } else {
    lit_libs += zlib
  }
}
