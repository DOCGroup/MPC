feature(lzo2) {
  // If the include files for lzo2 are not relative to the root (for
  // example, /usr/include/lzo), set the LZO2_INCDIR environment variable.
  expand(LZO2_INCDIR) {
    LZO2_INCDIR
    $(LZO2_ROOT)/include
  }
  includes += $(LZO2_INCDIR)
  libpaths += $(LZO2_ROOT)/lib
  lit_libs += lzo2
}
